@page
@model ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<h2>Your Profile</h2>
<form method="post">
    <div>
        <label>Username:</label>
        <span>@Model.CurrentUser.UserName</span>
    </div>
    <div>
        <label>Email:</label>
        <span>@Model.CurrentUser.Email</span>
    </div>
    <div>
        <label>XP:</label>
        <input asp-for="CurrentUser.XP" />
    </div>
    <div>
        <label>Bio:</label>
        <textarea asp-for="CurrentUser.Bio"></textarea>
    </div>
    <button type="submit">Save</button>
</form>